<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.auth.mapper.SysRolesMapper">
    <resultMap id="BaseResultMap" type="com.auth.domain.SysRoles">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="role" jdbcType="VARCHAR" property="role" />
        <result column="description" jdbcType="VARCHAR" property="description" />
        <result column="available" jdbcType="INTEGER" property="available" />
    </resultMap>
    <sql id="Base_Column_List">
        id, role, description, available
    </sql>

    <sql id="sysroles_include_if_sql">
        <if test="role != null">
            role = #{role}
        </if>
        <if test="available != null">
            AND available = #{available}
        </if>
        <if test="ids != null">
            AND id in
            <foreach collection="ids" index="index" item="item" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
      <!--
        <if test="fuzzyVinCode != null">
            and o.enquiry_id in (select id from enquiry where o.enquiry_id = enquiry.id and enquiry.vin_code like
            CONCAT('%',#{fuzzyVinCode},'%'))
        </if>
      -->
    </sql>

    <sql id="sysroles_include_order_sql">
        <if test="availableDesc != null">
            ORDER BY available DESC
        </if>
        <if test="availableAsc != null">
            ORDER BY available ASC
        </if>
    </sql>

    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_roles
        WHERE id = #{id,jdbcType=BIGINT}
    </select>

    <select id="findByParams" resultType="com.auth.domain.SysRoles" parameterType="map">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_roles
        <where>
            <include refid="sysroles_include_if_sql"/>
        </where>
        <include refid="sysroles_include_order_sql"/>
    </select>

    <insert id="insert" parameterType="com.auth.domain.SysRoles">
        INSERT INTO sys_roles
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="role != null">
                role,
            </if>
            <if test="description != null">
                description,
            </if>
            <if test="available != null">
                available,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="role != null">
                #{role},
            </if>
            <if test="description != null">
                #{description},
            </if>
            <if test="available != null">
                #{available},
            </if>
        </trim>
    </insert>


    <update id="update" parameterType="com.auth.domain.SysRoles">
        update sys_roles
        <set>
            <if test="id != null">
                id = #{},
            </if>
            <if test="role != null">
                role = #{},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="available != null">
                available = #{available},
            </if>
        </set>
        where id = #{id}
    </update>

    <cache />
</mapper>